/* components/tabs/tabs.wxss */
.min-tabs{
  width: 100%;
  color: #8a8a8a;
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
}
.min-tabs-item{
  width: 30px;
  height: 50px;
  font-size: 10px;
  display: inline-block;
  margin: 0 10px;
  text-align: center;
}
.min-tabs-item image{
  width: 30px;
  height: 30px;
  display: block;
}
