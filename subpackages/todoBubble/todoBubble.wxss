/* subpackages/todoBubble/todoBubble.wxss */
.todoBubble-page{
  background-color:rgb(255, 248, 211);
  position: relative;
}
.bottom-bar{
  height: 80px;
  width: 100%;
  position: absolute;
  bottom: 0px;
  left: 0;
  background-color: black;
}
.bottom-bar-center{
  display: inline-block;
  width: 80px;
  height: 80px;
  background-color:rgb(255, 248, 211);
  text-align: center;
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50px;
}
.round-btn{
  display: inline-block;
  background-color: rgba(219, 162, 5, 0.952);
  border-radius: 50%;
  width: 50px;
  height: 50px;
  padding: 0;
  vertical-align: middle;
  line-height: 50px;
  text-align: center;
  font-size: 28px;
  font-weight: 700;
  color: black;
  position: absolute;
  bottom: 50px;
  left: 50%;
  z-index: 9;
  transform: translateX(-50%);
}

.add-page{
  width: 100%;
  height: 100%;
  position: relative;
}
.background-image,.content{
  height : 100%;
   position: absolute;
   width: 100%;
   left: 0px;
   top: 0px;
}