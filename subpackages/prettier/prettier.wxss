/* subpackages/prettier/prettier.wxss */
.upload-img{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100px;
  text-align: center;
}
.img-list{
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
  margin-top: 10px;
}
.img-list image {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}
.upload-btn{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin: 0 auto;
  font-size: 18px;
  border: 1px solid #ccc;
}
.edit-img{
  width: 100%;
  height: calc(100vh - 180px);
  display: table-cell;
  vertical-align: middle;
}