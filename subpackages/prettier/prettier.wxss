/* subpackages/prettier/prettier.wxss */
.upload-img{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  text-align: center;
  z-index: 0;
}
.img-list{
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
  margin-top: 10px;
}
.img-list image {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}
.upload-btn{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin: 0 auto;
  font-size: 18px;
  border: 1px solid #ccc;
}
.edit-img{
  margin-top: 40px;
  text-align: center;
  vertical-align: middle;
}
.edit-img image{
  height: calc(100vh - 200px);
}
.save-btn{
  background-color: #ffffcc!important;
  color: #3c3c3c!important;
  border-radius: 40px;
  position: absolute;
  left: 20px;
  top: 10px;
}
.edit-action{
  position: fixed;
  bottom: 0;
  height: 0;
  width: 100%;
  z-index: 99;
  background-color: #fff;
  border-radius: 30px 30px 0 0;
  box-shadow: 0px 10px 10px 6px #3c3c3c;
}
.edit-action .slider{
  margin-top: 55px;
}
.slider-icon{
  position: absolute;
  bottom: 20px;
}
.slider-close{
  left: 20px;
}
.slider-done{
  right: 20px;
}